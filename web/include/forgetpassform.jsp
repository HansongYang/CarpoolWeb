<form action="/forgetpass.do" method="post">
    <div class="container">
        <div class="col-sm-6 form " style="margin-left: 25%;margin-top: 5em;">
            <h2>Forget Password</h2>
            <div class="col-sm-12">
                <br>
                <input name="username" id="username" class="form-control" placeholder="Username">
                <br>
            </div>
            <div class="col-md-12">
                <input name="email" id="email" class=" form-control col-sm-12" placeholder="Email">
                <br>
            </div>
            <div class="col-sm-12">
                <br>
                <input id="submit" type="submit" value="Submit" class="center-block btn btn-primary">
                <br>
            </div>
        </div>
    </div>
</form>